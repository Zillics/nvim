{
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "json",
    "jsonc",
    "xml"
  ],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "c++",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "xml.java.home": "/usr/lib/jvm/java-17-openjdk/"
}
